<?xml version="1.0" encoding="utf-8"?>

<!-- In principle, each app should have unique package -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androiddevelopment.glumcilegende">

    <!-- Declares that the app needs a permission to access internet -->
    <!--
   Posto zelimo da pozivamo servis samo kada smo povezani sa WIFI-jem
   moramo dodati prava nasoj aplikaciji:
       1) da moze da se poveze na internet
       2) da moze da proveri trenutno stanje povezanosti na mrezu
   -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!--
    Posto zelimo da pisemo odnosno citamo iz skladista podataka moramo traziti i
    odredjena dopustenja od strane operativnog sistema
    -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- Declares 1st (main) activity. Action "MAIN" and category "LAUNCHER" properties makes it visible in the application launcher -->
        <activity
            android:name="com.example.androiddevelopment.glumcilegende.activities.MainActivity"
            android:label="@string/activity_main_name"
            android:icon="@mipmap/ic_launcher"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declares SettingsActivity (the activity used to set app preferences). -->
        <activity
            android:name="com.example.androiddevelopment.glumcilegende.activities.SettingsActivity"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/activity_settings_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="com.example.androiddevelopment.glumcilegende.activities.MainActivity" />

        <!--
        Moramo definisati punu putanju do naseg servis-a.
        Ovo je obavezno, bez definicije servis-a necemo moci ni da ga koristimo.
        -->
        <service android:name="com.example.androiddevelopment.glumcilegende.async.SimpleService"/>

        <!--
        Moramo definisati punu putanju do naseg receiver-a.
        Ovo je obavezno, bez definicije receiver-a necemo moci ni da ga koristimo.
        -->
        <receiver android:name="com.example.androiddevelopment.glumcilegende.async.SimpleReceiver"/>

        <!--
        Moramo definisati punu putanju do naseg servis-a.
        Ovo je obavezno, bez definicije servis-a necemo moci ni da ga koristimo.
        -->
        <service android:name="com.example.androiddevelopment.glumcilegende.async.CommentService"/>

    </application>

</manifest>
